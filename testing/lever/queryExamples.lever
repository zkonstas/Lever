example4{
	result = get @realmadrid, @barcelona;

	var messi = 0;
	var ronaldo = 0;

	for each(var status in result.statuses) {
		if(status contains("messi")) {
			messi++;
		}
		if(status contains("ronaldo")) {
			ronaldo++;
		}

	}

	var max;
	if(messi > ronaldo) {
		max = messi;
	}
	else {
		max = ronaldo;
	}

	createChart "messi vs ronaldo mentions", "who", "# of mentions", {"Messi", "Ronaldo"};
}

